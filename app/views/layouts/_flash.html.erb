<br/>
<% flash.each do |type, message| %>
	<% if user_signed_in? %>
	<div class="alert alert-info fade-in">
		<button class="close" data-dismiss="alert"><i class="fa fa-times-circle"></i></button>
		<%= message %>
	</div>
	<% else %>
		<div class="alert alert-danger fade-in">
			<button class="close" data-dismiss="alert"><i class="fa fa-times-circle"></i></button>
			<%= message %>
		</div>
	<% end %>

<% end %>